<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<%= render "books/list", book: @book, user: @user %>

    </div>
    
    <div class="col-md-8 offset-md-1">
     <h1>Books</h1>
       <table class="table">
         <thead>
           <tr>
            <th></th>
            <th class="text-center"><h4>Title</h4></th>
            <th class="text-center"><h4>Opinion</h4></th>
           </tr>
          </thead>
        <tbody>
    <% @books.each do |book| %>
       <tr>
         <td class="text-center"><%= link_to user_path(@user.id) do %>
                                  <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format:"jpeg" %>
                                 <% end %></td>
          <td class="text-center"><%= link_to book.title, book_path(book.id) %></td>
           <td class="text-center"><%= book.body %></td>
        
    <% end %>
        </tbody>
       </table>
       </div>
      </div>
    </div>