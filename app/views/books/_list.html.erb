<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr class="border-top">
      <th>
        name
      </th>
      <th>
        <%= user.name %>
      </th>
    </tr>
    
          <tr class="border-top">
          <th>introduction</th>
          <th><%= user.introduction %></th>
          </tr>
    
  </tbody>
</table>

<i class="fas fa-user-cog"></i><%= link_to "プロフィール編集", edit_user_path(@user.id) %>

<%= form_with model: book, local:true do |f| %>
<h1>New book</h1>
 <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br><input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book"></br>
<% end %>