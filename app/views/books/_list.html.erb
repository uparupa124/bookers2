<h1>User info</h1>

<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<table>
  <tbody>
    <tr>
      <th>
        name
      </th>
      <th>
        <%= user.name %>
      </th>
    </tr>
    
          <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
          </tr>
    
  </tbody>
</table>

<%= link_to "プロフィール編集", edit_user_path(@user.id) %>

<%= form_with model: book, local:true do |f| %>
<h1>New book</h1>
 <h4>Title</h4>
