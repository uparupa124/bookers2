<%= form_with model: @book, local:true do |f| %>
<h1>New Book</h1>
 <h4>Title</h4>
    <%= f.text_field :title %>
   <h4>Opinion</h4>
    <%= f.text_area :body %>
    <%= f.submit "Create Book" %>
<% end %>


<h1>Books</h1>
  <% @books.each do |book| %>
  <span><%= link_to book.title, book_path(book.id) %></span>
  <p><%= book.body %></p>
  <% end %>