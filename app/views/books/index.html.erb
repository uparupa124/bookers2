<%= render "books/list", book: @book, user: @user %>

<h1>Books</h1>
  <% @books.each do |book| %>
  <%= link_to user_path(book.user.id) do %>
<%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
<% end %>
